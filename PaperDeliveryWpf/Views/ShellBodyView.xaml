<UserControl x:Class="PaperDeliveryWpf.Views.ShellBodyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaperDeliveryWpf.Views"
             xmlns:userControls="clr-namespace:PaperDeliveryWpf.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- *** The visibility of the UserControls is controlled by the ViewModels *** -->
            <userControls:LoginUserControl Grid.Column="1"></userControls:LoginUserControl>
            <userControls:HomeLoggedInUserControl Grid.Column="1"></userControls:HomeLoggedInUserControl>
            <userControls:HomeLoggedOutUserControl Grid.Column="1"></userControls:HomeLoggedOutUserControl>
        </Grid>
    </ScrollViewer>
</UserControl>
