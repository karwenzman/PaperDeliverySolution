<Window x:Class="PaperDeliveryWpf.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaperDeliveryWpf.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="800">
    <Grid>
        <!-- #region *** The main structure of the window is: Header(Row=0), Body(Row=1) and Footer(Row=2) ***-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <local:ShellHeaderView Grid.Row="0" />
        <local:ShellBodyView Grid.Row="1" />
        <local:ShellFooterView Grid.Row="2" />
    </Grid>
</Window>
